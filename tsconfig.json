{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "sourceMap": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "declaration": true,
    "outDir": "dist",
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts"]
}
